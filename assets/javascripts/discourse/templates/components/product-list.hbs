
{{#each products as |product|}}
  <div class="product">
    <h2>{{product.name}}</h2>

    <p>
      {{product.description}}
    </p>

    {{#if currentUser}}
      <div class="pull-right">
        {{#link-to "patrons.subscribe.show" product.id class="btn btn-primary"}}
          {{i18n 'discourse_patrons.subscribe.title'}}
        {{/link-to}}
      </div>
    {{/if}}
  </div>
{{/each}}

{{#unless currentUser}}
  <p>
    {{i18n 'discourse_patrons.subscribe.unauthenticated'}}
  </p>
{{/unless}}
